<h1 align="center"> User Login </h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class='form-group'>
    <div class="control-lable col-sm-2">
      <%= f.label :email %> <br/>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class:"form-control", placeholder: "Enter email"%>
    </div>
  </div>    

 <div class='form-group'>
    <div class="control-lable col-sm-2">
      <%= f.label :password %><br/>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>
  </div>  

  <div class='form-group'>
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "Log in", class:"btn btn-warning btn-lg" %>
    </div>
  </div>
    
<% end %>
<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Cancel request and Back to articles listing.", articles_path %> ]
</div>